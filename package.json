{
    "name": "schneider-capstone",
    "private": true,
    "version": "0.1.0",
    "workspaces": [
        "backend",
        "frontend"
    ],
    "scripts": {
        "prepare": "husky",
        "format:check": "prettier --check . --ignore-path .prettierignore",
        "format:write": "prettier --write . --ignore-path .prettierignore",
        "lint:all": "npm run lint --if-present --workspaces",
        "test:all": "npm run test --if-present --workspaces"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "prettier": "^3.6.2"
    }
}
